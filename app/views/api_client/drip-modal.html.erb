<div class="modal fade" id="addADrip" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
<div class="modal-dialog" drip>
	<div class="modal-content">
		<div class="modal-body">
			<div class="row">
				<div class="col-md-3">
					<h4>
					Add a drip
					</h4>
				</div>
				<form name="dripDetail" novalidate>
				<div class="col-md-9"style="padding-left: 0;">
					<input type="hidden" ng-model="dripDetails.dripbucket_id" />					
					<input type="text" name="title" class="form-control" placeholder="Title" ng-model="dripDetails.title" required>
					<br />
					<input type="text" name="link" class="form-control input-number" ng-pattern="/^(?:https?:\/\/)?(?:www\.)?(?:youtu\.be\/|youtube\.com\/(?:embed\/|v\/|watch\?v=|watch\?.+&v=))((\w|-){11})(?:\S+)?$/"  placeholder="Youtube(only) link here..." ng-model="dripDetails.link" required>
					<br />
					<textarea name="description" placeholder="Description" class="form-control custom-control" rows="4" style="resize:none" ng-model="dripDetails.description"></textarea>
					<br /> 
					<select name="state" class="form-control" ng-model="dripDetails.state">
						<option value="public">Public</option>
						<option value="profile only">Profile Only</option>
					</select>
				</div>
				</form>
			</div>
		</div>
		<div class="modal-footer">
			<button class="btn btn-primary pull-right" ng-click="addDrip( )" ng-disabled="dripDetail.$invalid">Add</button>
		</div>
	</div>
</div>
</div>